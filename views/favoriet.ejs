</head>
<body>
	<header>
        <%- include("nav") %>
    </header>
    <main>

        <h1 class="fort">Favorite Avatars  <i class="bi bi-star-fill buttonFavoriet"></i></h1>
   
        <div class ="skinContainer">
            
            <% if (characters.length >= 1) {
                 for (let i = 0; i < characters.length; i++) { %>
                <% if (characters[i].name != "null") {%>
                 <div class="skin">
                <% if (characters[i].rarity.value != "epic" && characters[i].rarity.value != "legendary" && characters[i].rarity.value != "rare"&&characters[i].rarity.value != "uncommon") { %>
                 <a href="\skin\<%=characters[i].name%>"><img class="unique" src="<%=characters[i].images.icon%>" alt=""></a>
                <%} else { %>
                 <a href="\skin\<%=characters[i].name%>"><img class="<%=characters[i].rarity.value%>" src="<%=characters[i].images.icon%>" alt=""></a>
     
               <% } %>
                
                    
                 <h2 class="skin-name"><%=characters[i].name%></h2>
                 </div>
                 <% } %>
                 <% } %>
                 <%} else {%>
                    <h2 id="emptyList">Your favorite list is empty!</h2>
                 <%}%>
    
    
        </div>


    </main>
	
    
	<footer>
